{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Modules */
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    /* Emit */
    "outDir": "./dist",
    "noEmitOnError": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}